<h1>Save Your Fave</h1>

{{#if username }}
<h2>This is <span class="primary yellow">{{ username }}'s</span> page</h2>

{{else }}
<form id="username" action="/name" method="post" class="ui form">

  <div class="ui left icon action input">
    <i class="user icon"></i>
    <input type="text" name="username" placeholder="what's your name?">
    <button class="ui blue button" type="submit">Save</button>
  </div>
</form>
{{/if}}
<div class="ui large hidden header divider"></div>
<p>Add any links you like to this site</p>
<div class="ui segment">
  <form id="link" action="/link" method="post" class="ui form">
    <div class="two fields">
      <div class="required field">
        <label>Label</label>
        <input type="text" name="label" placeholder="What would you like to call this link?">
      </div>
      <div class="required field">
        <label>Link</label>
        <input type="text" name="link" placeholder="Enter the URL of your link, ie. http://your-special-link">
      </div>
    </div>
    <button class="ui button" type="submit">Add This Link</button>
    <div class="ui error message"></div>
  </form>

</div>
<h2>These are the favorites saved to your site</h2>

<div class="ui relaxed divided list">
  {{#each links}}
  <div class="item">
    <i class="large linkify middle aligned icon"></i>
    <div class="content">
      <a class="header" target="_new" href="{{ link }}">{{ label }}</a>
      <div class="description">Updated 10 mins ago</div>
    </div>
  </div>
  {{/each}}
</div>

<script>
    $('form#link')
      .form({
        fields: {
          label: 'empty',
          link: 'empty'
        }
      })

  $(() => {

  })
</script>
